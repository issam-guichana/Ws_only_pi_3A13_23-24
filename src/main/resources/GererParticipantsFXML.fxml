<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #D8D1BD;" fx:controller="controllers.UserParticipantController">
    <VBox alignment="CENTER" spacing="10" prefHeight="400" prefWidth="600" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label text="Participants" style="-fx-font-size: 18px;" />
        <HBox spacing="10">
            <TextField fx:id="tfSearch" promptText="Enter Name or ID" />
            <Button  fx:id="searchButton" onAction="#searchParticipants" stylesheets="@Styles.css">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@images/icons8_Search_52px.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <TableView fx:id="tbParticipants" prefHeight="300">
            <columns>
                <TableColumn fx:id="colUserId" text="User ID" />
                <TableColumn fx:id="colUserName" text="User Name" />
                <TableColumn fx:id="colEventName" text="Event Name" />
                <!-- Add more columns if needed -->
            </columns>
        </TableView>

        <Label fx:id="lblParticipantCount" text="Participant Count: " style="-fx-font-size: 14px;" />
    </VBox>
</AnchorPane>