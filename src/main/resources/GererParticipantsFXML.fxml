<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #D8D1BD;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserParticipantController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 18px;" text="Participants" />
        <TextField fx:id="tfSearch" onKeyReleased="#searchParticipants" promptText="Enter Name or ID" />
        <TableView fx:id="tbParticipants" prefHeight="300">
            <columns>
                <TableColumn fx:id="colUserName" text="User Name" />
                <TableColumn fx:id="colEventName" text="Event Name" />
                <!-- Add more columns if needed -->
            </columns>
        </TableView>
        <Label fx:id="lblParticipantCount" style="-fx-font-size: 14px;" text="Participant Count: " />
    </VBox>
</AnchorPane>
